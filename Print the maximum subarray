#include <bits/stdc++.h>
using namespace std;

int main() {
    vector<int> arr = {-2,1,-3,4,-1,2,1,-5,4};
    int n = arr.size();

    int currSum = arr[0], maxSum = arr[0];
    int start = 0, end = 0, tempStart = 0;

    for (int i = 1; i < n; i++) {
        if (arr[i] > currSum + arr[i]) {
            currSum = arr[i];
            tempStart = i; // new subarray starts here
        } else {
            currSum += arr[i];
        }

        if (currSum > maxSum) {
            maxSum = currSum;
            start = tempStart;
            end = i;
        }
    }

    // Print result
    cout << "Maximum Sum = " << maxSum << endl;
    cout << "Subarray = ";
    for (int i = start; i <= end; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}
